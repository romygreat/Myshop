<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:background="@color/colorWhite">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/side_distance"
            android:layout_alignParentRight="true"
            android:layout_width="113dp"
            android:layout_marginLeft="@dimen/dp5"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp2"
            android:layout_height="92dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/qq" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            android:paddingTop="@dimen/dp4"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/emphasisTextview"
            android:layout_toLeftOf="@id/cv"
            android:lines="1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            tools:text="嗯嗯，就是" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp13"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp5"
            android:layout_toLeftOf="@id/cv"
            android:textColor="@color/defaultTextview"
            android:maxLines="3"
            android:lineSpacingExtra="2.5dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_below="@id/tv"
            android:ellipsize="end"
            tools:text="嗯嗯，嗯嗯，就是嗯就是嗯嗯就是嗯嗯就是嗯嗯就是嗯嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是就是" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp11"
            android:layout_toLeftOf="@id/cv"
            android:paddingTop="@dimen/dp2"
            android:lines="1"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/color_8c8c8c"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="@dimen/dp10"
            tools:text="嗯嗯，就是" />
        <View
            android:layout_toLeftOf="@id/cv"
            android:layout_alignParentBottom="true"
            style="@style/Line_e0e0e0_Horizontal"/>

</RelativeLayout>
